{
	"manifest_version": 3,
	"name": "Vinted AI Assistant",
	"version": "1.0.0",
	"description": "Analyse IA des opportunit√©s de revente sur Vinted",
	"permissions": ["storage", "activeTab"],
	"host_permissions": ["https://www.vinted.fr/*"],
	"background": {
		"service_worker": "src/background/index.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://www.vinted.fr/items/*"],
			"js": ["src/content/index.tsx"],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://www.vinted.fr/items/new*",
				"https://www.vinted.fr/member/items/new*",
				"https://www.vinted.fr/members/*/items/new*"
			],
			"js": ["src/content/form-filling/index.tsx"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_popup": "src/popup/index.html"
	}
}
